#!/usr/bin/env node
// -*- mode: javascript -*-
// vi: set ft=javascript :
'use strict';

var fs = require('fs');
var fileStream = fs.createWriteStream('ttyrecord');

var ttyrec = require('../lib/ttyrec.js');
console.log(ttyrec.encoder);
var ttyrecStream = new ttyrec.RecStream();

var settings = {
   cols: process.stdout.columns,
   rows: process.stdout.rows,
   cwd: process.cwd(),
   command: process.env['SHELL']
//   commandArgs: [ '-l' ]
};

var ps1 = '(\\[\\033[5;31m\\]*\\[\\033[0m\\])';
var penv = JSON.parse(JSON.stringify(process.env));
var nps1 = [ ps1 , process.env['PS1'] ].join('');
penv['PS1'] = nps1;


var pty = require('pty.js');
var _pty = pty.spawn(settings.command , settings.commandArgs, {
  cmd: settings.cwd,
  env: penv,
  cols: settings.cols,
  rows: settings.rows
});

_pty.on('exit', function(data) {
  process.exit;
});

// If we are piped to , set raw mode
if (typeof process.stdin.setRawMode === 'function') {
  process.stdin.setRawMode(true);
}

process.stdin.pipe(_pty);

_pty.pipe(ttyrecStream).pipe(fileStream);
_pty.pipe(process.stdout);
